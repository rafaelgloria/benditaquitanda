<p id="notice"><%= notice %></p>

<h1>Produtos</h1>

<table class="table">
  <thead>
    <tr>
      <th>Categorizacao</th>
      <th>Unidade</th>
      <th>Nome</th>
      <th>Descricao</th>
      <th>Valorunitario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.categorizacao.nome %></td>
        <td><%= produto.unidade.nome %></td>
        <td><%= produto.nome %></td>
        <td><%= produto.descricao %></td>
        <td><%= number_to_currency(produto.valorunitario) %></td>
        <td><%= link_to t(:detalhar), produto %></td>
        <td><%= link_to t(:editar), edit_produto_path(produto) %></td>
        <td><%= link_to t(:excluir), produto, method: :delete, data: { confirm: t(:confirmaexclusao) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Produto', new_produto_path %>
