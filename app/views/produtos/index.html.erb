<p id="notice"><%= notice %></p>

<h1>Produtos</h1>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Categoria</th>
        <th>Unidade</th>
        <th>Nome</th>
        <th>Descrição</th>
        <th>Valor</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @produtos.each do |produto| %>
        <tr>
          <td><%= produto.categorizacao.nome %></td>
          <td><%= produto.unidade.nome %></td>
          <td><%= produto.nome %></td>
          <td><%= produto.descricao %></td>
          <td><%= number_to_currency(produto.valorunitario) %></td>
          <td><%= link_to t(:detalhar), produto %></td>
          <td><%= link_to t(:editar), edit_produto_path(produto) %></td>
          <td><%= link_to t(:excluir), produto, method: :delete, data: { confirm: t(:confirmaexclusao) } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

