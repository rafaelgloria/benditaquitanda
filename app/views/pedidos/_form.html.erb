<%= form_for(@pedido) do |f| %>
  <% if @pedido.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pedido.errors.count, "error") %> prohibited this pedido from being saved:</h2>

      <ul>
      <% @pedido.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-horizontal">
    <div class="form-group">
      <%= f.label :usuario_id, class: 'col-sm-2 control-label' %>
      <div class="col-sm-8">
        <%= f.collection_select :usuario_id, Usuario.order(:email),:id,:email, include_blank: true, disabled: true, :selected => current_usuario.id, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :encomenda_id, class: 'col-sm-2 control-label' %>
      <div class="col-sm-8">
        <%= f.collection_select :encomenda_id, Encomenda.order(:dataentrega),:id,:dataentrega, include_blank: true, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= label_tag "Itens" %>
      </div>
    </div>
    <%= f.fields_for :itempedidos do |ff| %>
    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= label_tag ff.object.produto.nome %>
      </div>
      <div class="col-sm-8">
        <%= ff.number_field(:quantidade, in: 0..100) %>
        <%= ff.hidden_field :produto_id %>
        <%= label_tag ff.object.produto.descricao %> - 
        <%= label_tag number_to_currency(ff.object.produto.valorunitario) %>
      </div>
    </div>
    <% end %>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: 'btn btn-default' %>
      </div>
    </div>
  </div>
<% end %>
