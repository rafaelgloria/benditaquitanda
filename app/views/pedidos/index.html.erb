<p id="notice"><%= notice %></p>

<h1>Pedidos</h1>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Usu√°rio</th>
        <th>Encomenda</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @pedidos.each do |pedido| %>
        <tr>
          <td><%= pedido.usuario.email %></td>
          <td><%= pedido.encomenda.encomenda_com_endereco %></td>
          <td><%= link_to t(:detalhar), pedido %></td>
          <% if pedido.encomenda.datalimitepedido >= DateTime.now %>
            <td><%= link_to t(:editar), edit_pedido_path(pedido) %></td>
            <td><%= link_to t(:excluir), pedido, method: :delete, data: { confirm: t(:confirmaexclusao) } %></td>
          <% else %>
            <td></td>
            <td></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

