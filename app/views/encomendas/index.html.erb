<p id="notice"><%= notice %></p>

<h1>Listing Encomendas</h1>

<table>
  <thead>
    <tr>
      <th>Endereco</th>
      <th>Dataentrega</th>
      <th>Datalimitepedido</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @encomendas.each do |encomenda| %>
      <tr>
        <td><%= encomenda.endereco.logradouro %></td>
        <td><%= encomenda.dataentrega %></td>
        <td><%= encomenda.datalimitepedido %></td>
        <td><%= link_to 'Show', encomenda %></td>
        <td><%= link_to 'Edit', edit_encomenda_path(encomenda) %></td>
        <td><%= link_to 'Destroy', encomenda, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

