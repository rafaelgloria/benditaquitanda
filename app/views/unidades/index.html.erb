<p id="notice"><%= notice %></p>

<h1>Unidades</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @unidades.each do |unidade| %>
      <tr>
        <td><%= unidade.nome %></td>
        <td><%= unidade.descricao %></td>
        <td><%= link_to t(:detalhar), unidade %></td>
        <td><%= link_to t(:editar), edit_unidade_path(unidade) %></td>
        <td><%= link_to t(:excluir), unidade, method: :delete, data: { confirm: t(:confirmaexclusao) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Unidade', new_unidade_path %>
