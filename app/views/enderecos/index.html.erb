<p id="notice"><%= notice %></p>

<h1>Endereços</h1>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Logradouro</th>
        <th>Número</th>
        <th>CEP</th>
        <th>Bairro</th>
        <th>Município</th>
        <th>Estado</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @enderecos.each do |endereco| %>
        <tr>
          <td><%= endereco.logradouro %></td>
          <td><%= endereco.numero %></td>
          <td><%= endereco.cep %></td>
          <td><%= endereco.bairro %></td>
          <td><%= endereco.municipio %></td>
          <td><%= endereco.estado %></td>
          <td><%= link_to t(:detalhar), endereco %></td>
          <td><%= link_to t(:editar), edit_endereco_path(endereco) %></td>
          <td><%= link_to t(:excluir), endereco, method: :delete, data: { confirm: t(:confirmaexclusao) } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'Novo Endereço', new_endereco_path %>
