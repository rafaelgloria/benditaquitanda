<p id="notice"><%= notice %></p>

<h1>Categorias</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categorizacoes.each do |categorizacao| %>
      <tr>
        <td><%= categorizacao.nome %></td>
        <td><%= categorizacao.descricao %></td>
        <td><%= link_to t(:detalhar), categorizacao %></td>
        <td><%= link_to t(:editar), edit_categorizacao_path(categorizacao) %></td>
        <td><%= link_to t(:excluir), categorizacao, method: :delete, data: { confirm: t(:confirmaexclusao) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Categoria', new_categorizacao_path %>
